<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.openarc.nirmal.mytrack">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AttendanceActivity"
            android:label="@string/title_activity_attendance"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ContactActivity"
            android:label="@string/title_activity_contact"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LeaveUtilizationActivity"
            android:label="@string/title_activity_leave_utilization"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".BaseActivity" />
        <activity
            android:name=".CIRContactActivity"
            android:label="@string/title_activity_circontact"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CustomerActivity"
            android:label="@string/title_activity_customer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MeetingRoomActivity"
            android:label="@string/title_activity_meeting_room"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LeaveRequestActivity"
            android:label="@string/title_activity_leave_request"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GatePassRequestActivity"
            android:label="@string/title_activity_gate_pass_request"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AttendancesSubmitActivity"
            android:label="@string/title_activity_attendances_submit"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>